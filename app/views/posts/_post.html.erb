<div class="container" style="text-align: right;">
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-md-3">
      <div class="recipe-box">
          <% if post.image? %>
            <%= link_to (image_tag post.image.url, class: "recipe-index"), post %>
          <% end %>
        <ul>
          <li><%=link_to post.title, post %></li>
            <div class="option">
              <div class="index-temperature">
                온도<br>
                <div class="text-temperature">
                <%= post.temperature %>
                </div>
              </div>
              <div class="index-time">
                시간<br>
                <div class="text-time">
                <%= post.time %>
                </div>
              </div>
            </div>
        </ul>
      </div> <!--/recipe-box-->
    </div> <!--/col-md-3-->
    <% end %>
  </div> <!--/row-->
</div> <!--/container-->
<br>
